<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="top|left"
	android:background="@color/normal_bg"
	android:orientation="vertical"
	android:paddingBottom="0dp"
	android:paddingTop="0dp" >

	<ImageView
		android:id="@+id/fl_separator"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:src="@drawable/flist_separator" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="top|left"
		android:background="@color/normal_bg"
		android:orientation="horizontal"
		android:paddingBottom="2dp"
		android:paddingTop="2dp" >

		<ImageView
			android:id="@+id/fl_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="top|left"
			android:layout_marginLeft="4dp"
			android:background="@color/normal_bg"
			android:src="@drawable/dir_ok" >
		</ImageView>

		<TextView
			android:id="@+id/textViewIcon"
			android:layout_width="wrap_content"
			android:minWidth="50dp"
			android:layout_height="wrap_content"
			android:minHeight="30dp"
			android:padding="1dp"
			android:layout_margin="1dp"
			android:textColor="@color/normal_fg"
			android:background="@drawable/bold_border"
			android:singleLine="true"
			android:textAlignment="center"
			android:gravity="center"
			android:textStyle="bold"
			android:text=">"
			/>
		<!--android:typeface="monospace"-->
		<!--android:textSize="10dp"-->

		<LinearLayout
			android:id="@+id/fl_holder"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="top|left"
			android:layout_marginLeft="4dp"
			android:layout_marginRight="4dp"
			android:background="@color/normal_bg"
			android:orientation="vertical" >

			<TextView
				android:id="@+id/fl_text"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="top|left"
				android:layout_marginLeft="4dp"
				android:layout_weight="1"
				android:background="@color/normal_transparent"
				android:gravity="center_vertical"
				android:text="TextView"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="@color/normal_fg" />

			<TextView
				android:id="@+id/fl_text2"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="top|left"
				android:layout_marginLeft="4dp"
				android:layout_weight="1"
				android:background="@color/normal_transparent"
				android:gravity="center_vertical"
				android:text=""
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="@color/normal_fg" />
			<TextView
				android:id="@+id/fl_SizeDate"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="top|left"
				android:layout_marginLeft="4dp"
				android:layout_weight="1"
				android:background="@color/normal_transparent"
				android:gravity="center_vertical"
				android:text="Size: Date:"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="@color/normal_fg" />
		</LinearLayout>
	</LinearLayout>

</LinearLayout>